
<h1><%= @article.title %></h1>
<br>
<p><%= simple_format @article.text %></p>

<% if is_admin? %>
  <div class="list-group">
    <div class="btn-group" role="group" aria-label="Right Align">
      <%= link_to  edit_article_path(@article), class: "btn btn-default" do %> 
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
      <% end %>
      <%= link_to  article_path(@article), {'data-method' => :delete, class: "btn btn-danger"} do %> 
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
      <% end %>
    </div>
  </div>
<% end %>



<p><%= link_to 'Back to articles', controller: 'articles'  %></p>

