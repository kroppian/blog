<div class="center jumbotron">
  <h1>The Click</h1>
  <h3>Thoughts on the hard and soft edges of software</h3>
</div>



<% if current_user %>
  <div class="btn-group" role="group" aria-label="...">
    <%= link_to 'New Article', new_article_path, class: "btn btn-default" %>
  </div>
<% end %>


<% @articles.each do |art|  %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">
        <%= link_to art.title, article_path(art) %>
        <% if current_user %>
          

          <div class="btn-group" role="group" aria-label="...">
              <%= link_to "Edit Article", edit_article_path(art), class: "btn btn-default"%>
          </div>

        <% end %>
      </h2>
    </div>
    <div class="panel-body">
      <%= truncate art.text,length: 400, separator: ' ' %>    
    </div>
  </div>

<% end %>


